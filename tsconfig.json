{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
    // Remove `dom` once there's an acceptable fix for https://github.com/axios/axios/issues/3219
    "lib": ["dom", "es2020"]
  },
  "include": ["src/**/*"]
}
